                     , ekg-core
                     , microlens
                     , servant-elm
                     , mtl >= 2.2.2
                     , aeson >= 1.4.6.0
                     , flight-igc >= 1.0.0

library
    default-language:
        Haskell2010
    hs-source-dirs:
        src
    exposed-modules:
        Config
      , Init
      , Models
      , Api
      , Api.User
      , Logger
      , DevelMain
    build-depends:
        base >=4.12
      , aeson
      , bytestring
      , containers
      , ekg
      , ekg-core
      , fast-logger
      , foreign-store
      , katip
      , microlens
