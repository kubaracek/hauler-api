  default-language:    Haskell2010
  main-is:        Main.hs
  hs-source-dirs: app
  -- other-modules:
  -- other-extensions:
  build-depends:       base >=4.12
                     , backend
                     , servant
                     , servant-server
                     , servant-auth
                     , servant-auth-server
                     , persistent-postgresql
                     , monad-logger
                     , safe
                     , monad-metrics
                     , warp
                     , wai-middleware-metrics
